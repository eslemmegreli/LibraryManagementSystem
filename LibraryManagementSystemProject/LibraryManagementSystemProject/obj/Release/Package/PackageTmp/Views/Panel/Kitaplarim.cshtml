@using LibraryManagementSystemProject.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<h3 style="color:red;background-color:white" class="text-center">Kitap Listem</h3>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <a class="btn btn-success">
                                                <span class="bg-success">

                                                    @(((DateTime)item.ALISTARIH).ToString("dd-MMM-yyyy"))

                                                </span>
                                            </a>
                                            ---
                                            <a class="btn btn-warning">
                                                <span class="bg-warning">
                                                    @if (@item.UYEGETIRTARIH == null)
                                                    {
                                                        <i>Okuyor...</i>
                                                    }
                                                    @if (@item.UYEGETIRTARIH != null)
                                                    {
                                                        @Convert.ToDateTime(item.UYEGETIRTARIH).ToString("dd/MM/yyyy")
                                                    }
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.TBLKITAP.AD | @item.TBLKITAP.TBLYAZAR.AD  @item.TBLKITAP.TBLYAZAR.SOYAD
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>



