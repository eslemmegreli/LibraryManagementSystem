-@model LibraryManagementSystemProject.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Kitap ID</label>
            @*@Html.TextBoxFor(k => k.ID, new { @class = "form-control" })*@
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })    @*ID değiştirilemez olduğu için sadece okunabilir yaptım*@
        </div>
        <div style="margin-bottom:15px">
            <label>Kitap Adı:</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategorisi:</label>
            @Html.DropDownListFor(k => k.TBLKATEGORİ.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar:</label>
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı:</label>
            @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa Sayısı:</label>
            @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayın Evi:</label>
            @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning">Güncelle</button>
        <!--<input type="hidden" name="Durum" value="True"/>-->  @* güncelleme yaparken de durum default true gelsin*@
    </div>

}

