@model LibraryManagementSystemProject.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Yazar Adı:</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })   @*HTML Helper yardımı ile veri girişi sağladım*@
        @Html.ValidationMessageFor(y => y.AD)    @* tblyazar modeli içerisinde Ad üzerindeki required için html helper yardımı ile validation mesajı verdim*@
    </div>
    <div style="margin-top:15px">
        <label>Yazar Soyadı:</label>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.SOYAD)
    </div>
    <div style="margin-top:15px">
        <label>Detay:</label>
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
        @Html.ValidationMessageFor(y=>y.DETAY)
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Yeni Yazar Ekle</button>
    </div>
</form>

