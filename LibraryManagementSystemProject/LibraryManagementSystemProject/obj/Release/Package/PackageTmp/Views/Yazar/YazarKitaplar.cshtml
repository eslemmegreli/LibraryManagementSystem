@using LibraryManagementSystemProject.Models.Entity;
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="color:maroon">Yazar: @ViewBag.y1</h2>   @*viewbag ile çağırdım*@

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KATEGORİ</th>
        <th>YAYINEVİ</th>
    </tr>
    @foreach(var x in Model)
            {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.TBLKATEGORİ.AD</td>
            <td>@x.YAYINEVI</td>       
        </tr>
            }
</table>