@using LibraryManagementSystemProject.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<h2 style="color: #611149 "> DUYURULAR</h2>

<a href="/Duyuru/YeniDuyuru/" class="btn btn-default" style="color:white;background-color:#780046">Yeni Duyuru Ekle</a>
<br />
<br />
<table class="table table-striped">
    <tr style="color: #8f1e6e; background-color: azure ">
        <th>DUYURU NO</th>
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>İÇERİK</th>
    </tr>
    @foreach (var prsn in Model)
    {
        if (prsn.KATEGORI == "Yeni Kitap")
        {
            renk = "bg-info text-white";
        }
        if (prsn.KATEGORI == "İletişim")
        {
            renk = "bg-success text-white";
        }
        if (prsn.KATEGORI == "Gecikme")
        {
            renk = "bg-warning text-white";
        }
        if (prsn.KATEGORI == "Diğer")
        {
            renk = "bg-secondary text-white";
        }
        <tr  class="@renk">
            <td>@prsn.ID</td>
            <td>@prsn.KATEGORI</td>
            <td>@Convert.ToDateTime(prsn.TARIH).ToString("dd/MM/yyyy")</td>
            @*<td><a href="/Duyuru/DuyuruSil/@prsn.ID" class="btn btn-danger" >SİL</a></td>*@
            <td>@Html.ActionLink("SİL", "DuyuruSil", new { id = prsn.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz?')" }) </td>
            <td><a href="/Duyuru/DuyuruDetay/@prsn.ID" class="btn btn-default" style="color:azure; background-color: #8f1e6e">DETAYLAR</a></td>

        </tr>
    }
</table>


